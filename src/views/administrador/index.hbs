                                        <h5 class="card-title titulo-comida fs-1">{{this.name}}</h5>
                                    </div>
                                </div>
                                <div class="row row-cols-1 row-cols-md-2">
                                    <div class="col-md-6">
                                        <img src="/fotos/delivery/{{this.photo}}" alt="imagen" class="rounded " width="150px" height="150px">
                                    </div>
                                    <div class="col-md-6">
                                        <form action="/administrador/cambiar/{{this.idUser}}" method="POST">
                                            <p class="titulo"> Estado: {{this.estado}}</p>
                                            <button type="submit" class="btn btn-primary">Cambiar</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}} 
                    </div>   
                </div>
            </div>
        </div>
    </div>
</div>